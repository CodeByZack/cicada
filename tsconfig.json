{
  "compilerOptions": {
    "strictNullChecks": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "baseUrl": ".",
    "paths": {
      "#/*": ["shared/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": ["global.d.ts"]
}
