{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2015",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
