{
  "compilerOptions": {
    "strictNullChecks": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,

    "baseUrl": ".",
    "paths": {
      "#/*": ["pkgs/shared/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
